{{>messages}}
<form action="/user/reset_password" method="post">
  <div class="group">
    <label for="password" class="required">Password</label>
    <input type="password" name="password" required />
    {{#errors}}{{#password}}<span class="form-error">{{.}}</span>{{/password}}{{/errors}}
  </div>

 <div class="group">
    <label for="password_confirmation" class="required">Password (Confirm)</label>
    <input type="password" name="password_confirmation" required />
    {{#errors}}{{#password_confirmation}}<span class="form-error">{{.}}</span>{{/password_confirmation}}{{/errors}}
  </div>

  <div class="group">
    <button type="submit" class="button-main">Reset Password</button>
  </div>
</form>
