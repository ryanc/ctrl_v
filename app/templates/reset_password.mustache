{{>messages}}
<form action="/user/reset_password" method="post" class="form-horizontal" role="form">
  <div class="form-group {{#errors}}{{#password}}has-error has-feedback{{/password}}{{/errors}}">
    <label for="password" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="password" />
      {{#errors}}{{#password}}
      <p class="help-block">{{.}}</p>
      <span class="glyphicon glyphicon-remove form-control-feedback"></span>
      {{/password}}{{/errors}}
    </div>
  </div>

  <div class="form-group {{#errors}}{{#password_confirmation}}has-error has-feedback{{/password_confirmation}}{{/errors}}">
    <label for="password_confirmation" class="col-sm-2 control-label">Password (Confirm)</label>
    <div class="col-sm-10">
      <input type="password" name="password_confirmation" class="form-control" required />
      {{#errors}}{{#password_confirmation}}
      <p class="help-block">{{.}}</p>
      <span class="glyphicon glyphicon-remove form-control-feedback"></span>
      {{/password_confirmation}}{{/errors}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Reset Password</button>
    </div>
  </div>
</form>
