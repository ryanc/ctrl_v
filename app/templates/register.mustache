{{>messages}}
<form action="/register" method="post" class="form-horizontal" role="form">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name" />
    </div>
  </div>

  <div class="form-group {{#errors}}{{#username}}has-error{{/username}}{{/errors}}">
    <label for="username" class="col-sm-2 control-label">Username</label>
    <div class="col-sm-10">
      <input type="text" name="username" class="form-control" required />
      {{#errors}}{{#username}}<p class="help-block">{{.}}</p>{{/username}}{{/errors}}
    </div>
  </div>

  <div class="form-group {{#errors}}{{#email}}has-error{{/email}}{{/errors}}">
    <label for="email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="email" name="email" class="form-control" required />
      {{#errors}}{{#email}}<p class="help-block">{{.}}</p>{{/email}}{{/errors}}
    </div>
  </div>

  <div class="form-group {{#errors}}{{#password}}has-error{{/password}}{{/errors}}">
    <label for="password" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" name="password" class="form-control" required />
      {{#errors}}{{#password}}<p class="help-block">{{.}}</p>{{/password}}{{/errors}}
    </div>
  </div>

 <div class="form-group {{#errors}}{{#password_confirmation}}has-error{{/password_confirmation}}{{/errors}}">
    <label for="password_confirmation" class="col-sm-2 control-label">Password (Confirm)</label>
    <div class="col-sm-10">
      <input type="password" name="password_confirmation" required class="form-control" />
      {{#errors}}{{#password_confirmation}}<p class="help-block">{{.}}</p>{{/password_confirmation}}{{/errors}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
  </div>
</form>
