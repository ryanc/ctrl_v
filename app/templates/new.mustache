{{>messages}}
<form action="/new" method="post">
  <div class="form-group">
    <textarea id="paste" class="form-control" name="content">{{ paste }}</textarea>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-lg-4">
        <input class="form-control" type="text" name="filename" id="filename" placeholder="Optional filename ..." value="{{ filename }}" />
      </div>
      <div class="col-lg-4 col-lg-offset-4">
        <label class="checkbox-inline pull-right" for="highlighted">
          <input type="checkbox" name="highlighted" checked="checked" /> Syntax highlighting?
        </label>
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary btn-lg pull-right">Paste It</button>
  <input type="text" name="_hp" id="_hp" />
</form>
