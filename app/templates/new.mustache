{{>messages}}
<form action="/new" method="post">
  <input type="text" name="_hp" id="_hp" />
  <textarea name="content" id="paste_content">{{paste}}</textarea>
  <div class="right">
    <p>
      <span>
        <label for="highlighted">Syntax highlighting?</label>
        <input type="checkbox" name="highlighted" checked="checked" />
      </span>
    </p>
    <p>
      <input type="text" name="filename" id="filename" placeholder="Optional filename ..." value="{{ filename }}" />
      <button class="button-main" id="submit" type="submit">Paste It</button>
    </p>
  </div>
</form>
