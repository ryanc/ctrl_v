<%= erb :flash %>
<form action="/user/reset_password" method="post" class="form-horizontal" role="form">
  <div class="form-group <% if @user.errors.on(:password) %>has-error has-feedback<% end %>">
    <label for="password" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" name="password" class="form-control" required />
      <% if @user && @user.errors.on(:password) %>
      <p class="help-block"><%= @user.errors[:password].join(',') %></p>
      <span class="glyphicon glyphicon-remove form-control-feedback"></span>
      <% end %>
    </div>
  </div>

  <div class="form-group <% if @user.errors.on(:password_confirmation) %>has-error has-feedback<% end %>">
    <label for="password_confirmation" class="col-sm-2 control-label">Password (Confirm)</label>
    <div class="col-sm-10">
      <input type="password" name="password_confirmation" required class="form-control" />
      <% if @user && @user.errors.on(:password_confirmation) %>
      <p class="help-block"><%= @user.errors[:password_confirmation].join(',') %></p>
      <span class="glyphicon glyphicon-remove form-control-feedback"></span>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Reset Password</button>
    </div>
  </div>
</form>
